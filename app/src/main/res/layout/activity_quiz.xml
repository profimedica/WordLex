<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    tools:context="com.profimedica.wordlex.QuizActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#eee"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:gravity="right"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/LeftWordsLabel"
            android:layout_gravity="right"
            android:gravity="right"
            android:textColor="#00f"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="0"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        <TextView
            android:id="@+id/LeftWordsNumberL"
            android:layout_gravity="right"
            android:gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" / "
            android:textAppearance="?android:attr/textAppearanceLarge" />
        <TextView
            android:id="@+id/WrongWordsNumber"
            android:layout_gravity="right"
            android:gravity="right"
            android:textStyle="bold"
            android:textColor="#f00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>
    <TextView
        android:id="@+id/fullscreen_content"
        android:paddingTop="90dp"
        android:gravity="center"
        android:textSize="40dp"
        android:keepScreenOn="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Loading..."
        android:textAppearance="?android:attr/textAppearanceLarge" />
    <TextView
        android:id="@+id/switchLanguagesButton"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:keepScreenOn="true"
        android:textColor="#888"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="De -> En"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    <TextView
        android:id="@+id/timer"
        android:paddingTop="0dp"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:keepScreenOn="true"
        android:textColor="#888"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="00:00"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    <TextView
        android:id="@+id/statistics"
        android:gravity="right"
        android:layout_weight="1"
        android:text="&gt;&gt;&gt;"
        android:paddingRight="20dp"
        android:layout_gravity="right"
        android:layout_marginTop="30dp"
        android:keepScreenOn="true"
        android:textColor="#888"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:onClick="LunchStatisticsActivity" />
    <ImageView android:src="@drawable/settings_white"
        android:id="@+id/settings"
        android:layout_marginTop="60dp"
        android:layout_marginRight="30px"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:layout_marginTop="40dp"
        android:gravity="left"
        android:orientation="horizontal">
        <ImageView android:src="@drawable/arrow_down_black"
            android:id="@+id/difficulty_lower"
            android:layout_gravity="left|bottom"
            android:gravity="left|bottom"
            android:layout_width="30dp"
            android:layout_height="20dp" />
        <TextView
            android:id="@+id/level"
            android:textColor="#000"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 0 "
            android:textAppearance="?android:attr/textAppearanceLarge" />
        <ImageView android:src="@drawable/arrow_up_black"
            android:id="@+id/difficulty_higher"
            android:layout_gravity="right|top"
            android:gravity="right|top"
            android:layout_width="30dp"
            android:layout_height="20dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/AnteNative"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#888"
            android:textSize="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:text="Native"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#888"
            android:text=" = "
            android:textAppearance="?android:attr/textAppearanceLarge" />
        <TextView
            android:id="@+id/AnteForeign"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="italic"
            android:textColor="#888"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:text="Foreign"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:gravity="left"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/GoodLabel"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#00f"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="0"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        <TextView
            android:id="@+id/gb"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" / "
            android:textAppearance="?android:attr/textAppearanceLarge" />
        <TextView
            android:id="@+id/BadLabel"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#f00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>
    <RadioGroup
        android:gravity="bottom"
        android:paddingBottom="30dp"
        android:id="@+id/radioGroup1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <Button
            android:id="@+id/button0"
            android:padding="13dp"
            style="@style/GlossyGradientButtonStyle"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:textSize="26dp"
            android:text="Loading..." />
        <Button
            android:id="@+id/button1"
            android:padding="13dp"
            style="@style/GlossyGradientButtonStyle"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="26dp"
            android:text="Loading..." />
        <Button
            android:id="@+id/button2"
            android:padding="13dp"
            style="@style/GlossyGradientButtonStyle"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="26dp"
            android:text="Loading..." />
        <Button
            android:id="@+id/button3"
            android:padding="13dp"
            style="@style/GlossyGradientButtonStyle"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="26dp"
            android:text="Loading..." />
        <Button
            android:id="@+id/button4"
            android:padding="13dp"
            style="@style/GlossyGradientButtonStyle"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="26dp"
            android:text="Loading..." />
    </RadioGroup>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">
        <LinearLayout
            android:id="@+id/fullscreen_content_controls"
            style="?metaButtonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@color/black_overlay"
            android:orientation="horizontal"
            tools:ignore="UselessParent">
        </LinearLayout>
    </FrameLayout>
</FrameLayout>