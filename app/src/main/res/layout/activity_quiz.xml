<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    tools:context="com.profimedica.wordlex.QuizActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#eee"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:gravity="right"
        android:orientation="horizontal">
        <!--TextView
            android:padding="5px"
            android:id="@+id/LastTranslation"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Translation Here"
            android:textAppearance="?android:attr/textAppearanceLarge" /-->
        <!--TextView
            android:id="@+id/TotalWordsNumberL"
            android:gravity="right"
            android:textColor="#00f"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Total: "
            android:textAppearance="?android:attr/textAppearanceLarge" />
        <TextView
            android:id="@+id/TotalWordsNumber"
            android:gravity="right"
            android:color="#00f"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        <TextView
            android:id="@+id/GuesedWordsNumberL"
            android:gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="="
            android:textAppearance="?android:attr/textAppearanceLarge" />
        <TextView
            android:id="@+id/GuesedWordsNumber"
            android:gravity="right"
            android:textStyle="bold"
            android:textColor="#0c0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        <TextView
            android:id="@+id/WrongWordsNumberL"
            android:gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:textAppearance="?android:attr/textAppearanceLarge" /-->
        <TextView
            android:id="@+id/LeftWordsLabel"
            android:layout_gravity="right"
            android:gravity="right"
            android:textColor="#00f"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="0"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        <TextView
            android:id="@+id/LeftWordsNumberL"
            android:layout_gravity="right"
            android:gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" / "
            android:textAppearance="?android:attr/textAppearanceLarge" />
        <TextView
            android:id="@+id/WrongWordsNumber"
            android:layout_gravity="right"
            android:gravity="right"
            android:textStyle="bold"
            android:textColor="#f00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        <!--TextView
            android:id="@+id/LeftWordsNumberR"
            android:gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" left)"
            android:textAppearance="?android:attr/textAppearanceLarge" /-->
    </LinearLayout>
    <TextView
        android:id="@+id/fullscreen_content"
        android:paddingTop="90dp"
        android:gravity="center"
        android:textSize="40dp"
        android:keepScreenOn="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Loading..."
        android:textAppearance="?android:attr/textAppearanceLarge" />
    <TextView
        android:id="@+id/switchLanguagesButton"
        android:paddingTop="30dp"
        android:gravity="center"
        android:keepScreenOn="true"
        android:textColor="#888"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="En -> De"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:gravity="left"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/GoodLabel"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#00f"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="0"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        <TextView
            android:id="@+id/gb"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" / "
            android:textAppearance="?android:attr/textAppearanceLarge" />
        <TextView
            android:id="@+id/BadLabel"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#f00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>
    <RadioGroup
        android:gravity="bottom"
        android:paddingBottom="30dp"
        android:id="@+id/radioGroup1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <Button
            android:id="@+id/button0"
            android:padding="13dp"
            style="@style/GlossyGradientButtonStyle"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:textSize="26dp"
            android:text="Loading..." />
        <Button
            android:id="@+id/button1"
            android:padding="13dp"
            style="@style/GlossyGradientButtonStyle"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="26dp"
            android:text="Loading..." />
        <Button
            android:id="@+id/button2"
            android:padding="13dp"
            style="@style/GlossyGradientButtonStyle"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="26dp"
            android:text="Loading..." />
        <Button
            android:id="@+id/button3"
            android:padding="13dp"
            style="@style/GlossyGradientButtonStyle"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="26dp"
            android:text="Loading..." />
        <Button
            android:id="@+id/button4"
            android:padding="13dp"
            style="@style/GlossyGradientButtonStyle"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="26dp"
            android:text="Loading..." />
    </RadioGroup>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">
        <LinearLayout
            android:id="@+id/fullscreen_content_controls"
            style="?metaButtonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@color/black_overlay"
            android:orientation="horizontal"
            tools:ignore="UselessParent">
            <Button
                android:id="@+id/difficulty_0_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0" />
            <Button
                android:id="@+id/difficulty_1_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1" />
            <Button
                android:id="@+id/difficulty_3_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="3" />
            <Button
                android:id="@+id/difficulty_5_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="5" />
            <Button
                android:id="@+id/statisticsButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="LunchStatisticsActivity"
                android:layout_weight="1"
                android:text=">>" />
        </LinearLayout>
    </FrameLayout>
</FrameLayout>